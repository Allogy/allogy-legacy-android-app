<resources>

	<!-- Base application theme is the default theme. -->
	<style name="Theme" parent="android:Theme"></style>

	<!-- Variation on the Light theme that turns off the title -->
	<style name="Theme.Allogy" parent="android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="UI"></style>

	<style name="UI.HomeButton">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:background">@null</item>
	</style>

	<style name="UI.TitleBar">
		<item name="android:id">@id/title_container</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">@dimen/title_height</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@drawable/action_bar_background_gradient</item>
	</style>

	<style name="UI.TitleBarAction">
		<item name="android:layout_width">@dimen/title_height</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@drawable/title_button</item>
	</style>

	<style name="UI.TitleBarProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">14dip</item>
		<item name="android:layout_marginRight">15dip</item>
		<item name="android:layout_marginTop">14dip</item>
		<item name="android:indeterminate">true</item>
	</style>

	<style name="UI.TitleBarSeparator">
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@color/ab_separator</item>
	</style>

	<style name="UI.TitleBarLogo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="UI.TitleBarSpring">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="UI.TitleBarText">
		<item name="android:id">@id/title_text</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:paddingLeft">12dip</item>
		<item name="android:paddingRight">12dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/ab_text</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="UI.ListContent">
		<item name="android:textSize">15sp</item>
		<item name="android:lineSpacingMultiplier">1.1</item>
		<item name="android:textColor">@android:color/primary_text_light</item>
	</style>

	<style name="UI.ListItem">
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingTop">8dip</item>
		<item name="android:paddingBottom">8dip</item>
	</style>

	<style name="UI.TextBody">
		<item name="android:textSize">15sp</item>
		<item name="android:lineSpacingMultiplier">1.1</item>
		<item name="android:textColor">@android:color/secondary_text_light</item>
	</style>


	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />

	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>

	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>

	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>

	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />

	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>

	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>

	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>

	<style name="Container" />

	<style name="Container.ContentItem">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">@drawable/content_item_selector</item>
		<item name="android:textColor">@drawable/content_item_text_selector</item>
	</style>
	
	<style name="Container.ListItem">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">@color/white</item>
	</style>

	<style name="Text" />

	<style name="Text.ContentHeader">
		<!-- different id for each content? <item name="android:id">@content_container</item> -->
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@color/content_header_background</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Text.ContentLabel">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Text.ContentText">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Text.ContentBodyText">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
	</style>

	<style name="Text.ContentTextDetail">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">2</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">12sp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:textStyle">bold</item>
		<!-- text color ? -->
	</style>

	<style name="Text.ResourceText">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">12sp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="Text.ListPrimaryText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>
	
	<style name="Text.ListSecondaryText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>

	<style name="ContentIcon">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">wrap_content</item>
	</style>

	<style name="Separator">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@color/separator</item>
	</style>

	<style name="Divider">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">10dp</item>
		<item name="android:background">#00000000</item>
	</style>

	<style name="MediaButton">
		<item name="android:background">@drawable/media_button_background</item>
	</style>

</resources>
